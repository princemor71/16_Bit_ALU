//16 bit ALU modula




module alu_4bit (
    input  [3:0] A, B,
    input  [2:0] sel,
    output reg [3:0] Y,
    output reg carry_out
);

always @(*) begin
    case(sel)
        3'b000: {carry_out, Y} = A + B;
        3'b001: {carry_out, Y} = A - B;
        3'b010: Y = A & B;
        3'b011: Y = A | B;
        3'b100: Y = A ^ B;
        3'b101: Y = ~A;
        3'b110: Y = A + 1;
        3'b111: Y = A - 1;
        default: Y = 4'b0000;
    endcase
end

endmodule
